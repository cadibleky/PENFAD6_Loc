                                .Width(300)
                                .Icon(Icon.Add)
                                .DirectEvents(de =>
                                {
                                    // de.Click.Confirmation.ConfirmRequest = true;
                                    de.Click.Confirmation.Title = "Send Record";
                                    // de.Click.Confirmation.Message = "Send Payment Confirmation?";
                                    de.Click.Url = Url.Action("SendRecord");

                                }).MarginSpec("10 10 0 10").Listeners(l => l.Click.Handler = "Ext.net.Mask.show({msg: 'Approving... Please wait.'})"),

                               x.Button()
                                .Text("Download Payment Confirmation")
                                .Width(300)
                                .Icon(Icon.Add)
                                .DirectEvents(de =>
                                {
                                    // de.Click.Confirmation.ConfirmRequest = true;
                                    de.Click.Confirmation.Title = "Download Record";
                                    // de.Click.Confirmation.Message = "Send Payment Confirmation?";
                                    de.Click.Url = Url.Action("DownloadRecord");

                                }).MarginSpec("10 10 0 10").Listeners(l => l.Click.Handler = "Ext.net.Mask.show({msg: 'Downloading... Please wait.'})"),


                            x.Button()
                                .Text("Cancel")
                                .Width(300)
