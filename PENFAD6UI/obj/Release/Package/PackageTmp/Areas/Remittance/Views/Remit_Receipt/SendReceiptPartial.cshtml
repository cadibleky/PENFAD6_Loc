            .Title("Payment Reversal")
            .Frame(true)
            .Layout(LayoutType.Column)
            .Closable(true)
            .AutoScroll(true)
            .MarginSpec("0 0 0 0")
            .Width(1400)
            .Height(1200)
            .FieldDefaults(fd =>
            {
                fd.LabelAlign = LabelAlign.Top;
                fd.MsgTarget = MessageTarget.Side;
            })

            .Items(


            x.FieldSet()
            .Frame(true)
            .Layout(LayoutType.Column)
            .AutoScroll(true)
            .MarginSpec("0 0 0 0")
            .Width(1400)
            .Height(1200)

            .Items(

                 x.FieldSet()
                        .MarginSpec("0 0 0 0")
                        .Width(800)
                        .Height(750)
                        .Defaults(dd =>
                        { dd.Add(new Parameter("LabelWidth", "115")); })

                        .Items(

                                     x.FieldSet()
                                     .MarginSpec("5 0 0 0")
                                     .Layout(LayoutType.Column)
                                     .Items(

                                     x.ComboBox().Name("Employer_Id").FieldLabel("Employer").MarginSpec("15 0 5 10").Width(300).Items(ReceiptRepo.GetEmployersList().Select(d => new ListItem(d.Employer_Name, d.Employer_Id))),
