
@using PENFAD6DAL.Repository.Setup.SystemSetup

@model IEnumerable<setup_TitleRepo>

@{
    var title = new setup_TitleRepo();
    var x = Html.X();
}

@(x.FormPanel()
            .ID("title")
            .ColumnWidth(0.6)
            .Title("Setup Title")
            .Frame(true)
            .Closable(true)
            .Layout(LayoutType.Column)
            .MarginSpec("0 0 0 0")
            .Width(850)
            .Height(550)
            .FieldDefaults(fd =>
            {
                fd.LabelAlign = LabelAlign.Top;
                fd.MsgTarget = MessageTarget.Side;
            })

            .Items(

                    x.GridPanel()
                            .ID("titleGrid")
                            .Title("View Title List")
                            .Frame(true)
                            .Width(510)
                            .MarginSpec("10 0 0 10")
                            .Height(500)
                            .Store(
                                x.Store()
                                    .AutoLoad(true)
                                    .ID("titleStore")
                            .DataSource(Model)
                            .Model(
                                x.Model()
                                    .Fields(
                                        x.ModelField().Name("Title_ID").Type(ModelFieldType.String),
                                        x.ModelField().Name("Title").Type(ModelFieldType.String)
                                        )
                            )
                            .ServerProxy(
                                   Html.X().AjaxProxy()
                                   .Url(Url.Action("Read"))
                                  )

                            .PageSize(10)
                    )
                    .Refresh()
                    .BottomBar(
                        Html.X().PagingToolbar()
                    )
                    .Listeners(l => l.SelectionChange.Handler = "if (selected[0]) { this.up('form').getForm().loadRecord(selected[0]); }")
                   .ColumnModel(x.Column().DataIndex("Title_ID").Text("TITLE ID").Width(0))
                   .ColumnModel(x.Column().DataIndex("Title").Text("TITLE").Width(300)),


                    x.FieldSet()
                       // .ColumnWidth(0.4)
                        .Collapsible(true)
                         .Width(400)
                         .Height(510)
                        .Title("Add/Edit Title")
                        .MarginSpec("0 0 0 10")
                        .Defaults(dd =>
                        { dd.Add(new Parameter("LabelWidth", "115")); })


                        .Items(
                            x.Hidden().Name("Title_ID"),
                            x.TextField()
                                .Name("Title")
                                .Width(290)
                                 .FieldStyle("TEXT-TRANSFORM:UPPERCASE")
                                .FieldLabel("TITLE")
                                .AllowBlank(false)
                                .BlankText("Title is required.")
                            )
                        .Items(
                            x.Button()
                                .Text("Save")
                                .Width(110)
                                .Icon(Icon.Add)
                                .DirectEvents(de =>
                                {
                                    de.Click.Url = Url.Action("SaveRecord");

                                }).MarginSpec("20 10 0 0"),
                            x.Button()
                                .Text("Delete")
                                .Width(110)
                                .Icon(Icon.Delete)
                                .DirectEvents(de =>
                                {
                                    de.Click.Url = Url.Action("DeleteRecord");
                                    de.Click.Confirmation.ConfirmRequest = true;
                                    de.Click.Confirmation.Title = "Delete Record";
                                    de.Click.Confirmation.Message = "Are you sure you want to delete?";
                                }).MarginSpec("20 10 0 0"),

                            x.Button()
                                .Text("Clear")
                                .Width(90)
                                .Icon(Icon.ArrowRefresh)
                                .OnClientClick("this.up('form').getForm().reset();")
                                .MarginSpec("20 10 0 0")
                        )
                )

)

















