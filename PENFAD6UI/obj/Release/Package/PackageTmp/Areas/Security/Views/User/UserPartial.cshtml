



@using PENFAD6DAL.Repository.Security

@model IEnumerable<sec_UserRepo>

@{
    var X = Html.X();
    var repo_user = new sec_UserRepo();
    var repo_group = new sec_UserGroupRepo();
    var repo_role = new sec_UserRoleRepo();
}
<script>
        var onComboBoxSelect = function (combo) {
            var store = combo.up("gridpanel").getStore();
            store.pageSize = parse(combo.getValue(), 10);
            store.reload();
        };
</script>



@(Html.X().FormPanel()
            .ID("frmuser")
            .Title("User Account")
            .Header(false)
            .Border(true)
            .Closable(true)
            .Frame(true)
            .Height(500)
            .MarginSpec("0 0 0 10 ")
            .Layout(LayoutType.Column)
            .Width(270)
            //.WidthSpec("auto")
            .BodyPadding(5)
            .FieldDefaults(fd =>
            {
                fd.LabelAlign = LabelAlign.Top;
                fd.MsgTarget = MessageTarget.Side;
            })
            .Items(Html.X().GridPanel()
                    .Title("Create User Account")
                    .ColumnWidth(0.6)
                    .Height(500)
                    .Frame(true)
                    .Border(true)
                    .Store(Html.X().Store()
                                .ID("userstore")
                                .DataSource(Model)
                                .PageSize(10)
                                .Model(Html.X().Model()
                                        .Fields(f =>
                                        {
                                            f.Add(Html.X().ModelField().Name("Employee_Name"));
                                            f.Add(Html.X().ModelField().Name("Employee_Id"));
                                            f.Add(Html.X().ModelField().Name("Email"));
                                            f.Add(Html.X().ModelField().Name("MobileNo"));
                                            f.Add(Html.X().ModelField().Name("PhoneNo"));
                                        })
                                        )// end model
                                .ServerProxy(
                                              Html.X().AjaxProxy()
                                                        .Url(Url.Action("Read"))
                                            )//end serverproxy
                            )// end store
                     .ColumnModel(
                                    Html.X().Column().Text("Staff Name").DataIndex("Employee_Name").Width(400),
                                    Html.X().Column().Text("Satff ID").DataIndex("Employee_Id").Width(200)

                               )// end coloumnmodel
                     .Listeners(l => l.SelectionChange.Handler = "if (selected[0]) { this.up('form').getForm().loadRecord(selected[0]); }")
                     .SelectionModel(Html.X().RowSelectionModel().Mode(SelectionMode.Single))
                     .View(Html.X().GridView().StripeRows(true))
                     .Plugins(Html.X().FilterHeader())
                     .Refresh()
                     .BottomBar(
                                Html.X().PagingToolbar()
                                    .Items(
                                            Html.X().Label("Page Size:"),
                                            Html.X().ComboBox()
                                                    .Width(80)
                                                    .Items("5", "10", "15", "20")
                                                    .SelectedItems("10")
                                                    .Listeners(l => { l.Select.Fn = "onComboBoxSelect"; })
                                            )
                                       .Plugins(Html.X().ProgressBarPager())
                                ),//end bottombar

                     Html.X().FieldSet()
                            .ColumnWidth(0.3)
                            .Title("Create New User Account")
                            .MarginSpec("0 0 0 10")
                            .Height(500)
                            .Defaults(d =>
                            {
                                d.Add(new Parameter("LabelWidth", "115"));
                            })// end defaults
                           .Items(
                                     Html.X().Hidden().Name("Employee_Id"),
                                     Html.X().Hidden().Name("Email"),
                                     Html.X().Hidden().Name("MobileNo"),
                                     Html.X().Hidden().Name("PhoneNo"),
                                    Html.X().TextField().Name("Employee_Name").FieldLabel("Staff Name").Width(350).AllowBlank(false).BlankText("Staff name is required.").FieldStyle("text-transform:uppercase").Editable(false),
                                    Html.X().TextField().Name("User_Id").FieldLabel("Enter User ID").Width(350).AllowBlank(false).BlankText("Enter user id").FieldStyle("text-transform:lowercase"),
                                    //Html.X().TextField().Name("UserGroupDesc").FieldLabel("Description").Width(250).FieldStyle("text-transform:uppercase"),
                                    Html.X().ComboBox()
                                                .ID("ComboBoxCountry")
                                                .Editable(false)
                                                .Width(350)
                                                .QueryMode(DataLoadMode.Local)
                                                .TriggerAction(TriggerAction.All)
                                                .EmptyText("Select a role")
                                                .FieldLabel("Select User Role")
                                                .Items(repo_role.GetUserRoleList().Select(c => new ListItem(c.UserRoleName, c.UserRoleId)))
                                                .Listeners(ls =>  ls.Select.Handler = "App.ComboBoxCity.clearValue(); App.ComboBoxCity.getStore().load()"),
                                   //.Listeners(l => { l.Select.Handler = "this.next().setValue(this.getRawValue());"; }),
                                   Html.X().ComboBox()
                                                .ID("ComboBoxCity")
                                                .Name("User_Group_Id")
                                                .Editable(false)
                                                .FieldLabel("Select User Group")
                                                //.TypeAhead(true)
                                                .Width(350)
                                                .QueryMode(DataLoadMode.Local)
                                                .ForceSelection(true)
                                                .TriggerAction(TriggerAction.All)
                                                .DisplayField("name")
                                                .ValueField("id")
                                                .EmptyText("Loading...")
                                                .ValueNotFoundText("Loading...")
                                                .Store(Html.X().Store()
                                                        .AutoLoad(false)
                                                        .Model(Html.X().Model()
                                                            .IDProperty("Id")
                                                            .Fields(
                                                                new ModelField("id", ModelFieldType.String) { Mapping = "Id" },
                                                                new ModelField("name", ModelFieldType.String) { Mapping = "Name" }
                                                            )
                                                        )
                                                        .Proxy(Html.X().AjaxProxy()
                                                            .Url(Url.Action("GetUserGroupForRoleIdList"))
                                                            .Reader(Html.X().JsonReader().RootProperty("data"))
                                                        )
                                                        .Parameters(ps =>
                                                            ps.Add(new StoreParameter("roleid", "App.ComboBoxCountry.getValue()", ParameterMode.Raw))
                                                        )
                                                        .Listeners(ls =>
                                                            ls.Load.Handler = @"var combo = App.ComboBoxCity;
                                                                                combo.setValue(records[0].get(combo.valueField));"
                                                        )
                                                    )//end store

                                  )// end field items
                            .Items(Html.X().Button()
                                       .Text("Create User Account")
                                       .Width(220)
                                       .Icon(Icon.UserAdd)
                                       .DirectEvents(de =>
                                       {
                                           de.Click.Url = Url.Action("SaveUser");
                                       }).MarginSpec("20 10 0 0"),
   
                                         Html.X().Button()
                                            .Text("Clear")
                                            .Width(85)
                                            .Icon(Icon.ArrowRefresh)
                                            .OnClientClick("this.up('form').getForm().reset();")
                                            .MarginSpec("20 10 0 0")
                                      )


            ) // end of gridpanel





//end form tag
)